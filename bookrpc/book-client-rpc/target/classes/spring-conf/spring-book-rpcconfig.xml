<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-4.2.xsd	
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 自动扫描的包名 -->
    <context:component-scan base-package="com.book.rpc.client.*"> </context:component-scan>

    <dubbo:application name="book-rpc-platform" owner="book"/>
    <dubbo:registry address="zookeeper://127.0.0.1:2181"  client="curator" timeout="10000"/>

    <dubbo:reference id="IBookService" interface="com.book.thrift.service.IBookService$Iface" protocol="thrift093"
                     version="1.0.0" timeout="60000" check="false">
    </dubbo:reference>
</beans>